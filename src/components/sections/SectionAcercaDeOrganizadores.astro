---
import ElementBasicTitle from "../elements/ElementBasicTitle.astro";
import ElementBasicSubTitle from "../elements/ElementBasicSubTitle.astro";
import ElementBasicText from "../elements/ElementBasicText.astro";
import ElementOrganizador from "../elements/ElementAcercaDeOrganizador.astro";
import Data from "../../data/SectionAcercaDeOrganizadores.json";

const content = Data[0];
---

<section
    class="mx-auto mb-10 scroll-mt-15
        max-w-full px-5
        sm:px-10
        md:px-20
        lg:max-w-6xl
        pb-5 md:pb-10"
    id={content.id_section}
>
    <div class="mt-15">
        <ElementBasicTitle text={content.title_section} />
    </div>
    <div class="mt-10 lg:mt-15">
        <ElementBasicSubTitle text={content.subtitle_section} />
    </div>
    <div class="mt-5">
        <ElementBasicText text={content.body_section} />
    </div>

    <div class="grid gap-10 mt-8">
        {
            content.elements.map((item) => (
                <ElementOrganizador
                    title={item.title}
                    body={item.body}
                    href={item.href}
                    alt={item.alt}
                    image={item.image}
                />
            ))
        }
    </div>
</section>
