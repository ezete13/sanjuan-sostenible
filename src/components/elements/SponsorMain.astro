---
const { title, body, link, logo, primary_color } = Astro.props;
---

<div
    class="w-full rounded-2xl bg-shark-50 hover:bg-white transition-all shadow-md hover:shadow-xl hover:scale-[1.02] duration-300"
>
    <div class="flex flex-col md:flex-row items-center">
        <div class="md:w-1/3 w-full p-8 flex justify-center">
            <img
                src={`/images/sponsors_main/${logo}`}
                alt={title}
                class="max-h-40 object-contain"
            />
        </div>

        <div class="md:w-2/3 w-full p-8">
            <h3
                class="text-2xl font-heading font-bold mb-4"
                style={`color: ${primary_color}`}
            >
                {title}
            </h3>
            <p class="font-body text-md text-shark-900 leading-relaxed">
                {body}
            </p>
            <div class="mt-6">
                <a
                    href={link}
                    target="_blank"
                    class="inline-flex items-center gap-2 font-heading font-semibold text-lg px-4 py-2 rounded-full border transition-all"
                    style={`border-color: ${primary_color}; color: ${primary_color}`}
                >
                    Visitar Web
                    <svg
                        width="16"
                        height="16"
                        fill={primary_color}
                        viewBox="0 0 24 24"
                    >
                        <path
                            d="M14 3l7 7-1.41 1.41L16 7.83V20h-2V7.83l-3.59 3.58L9 10l7-7z"
                        ></path>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</div>
