---
const { title, body, link, logo, primary_color } = Astro.props;
import ElementBasicButtonLink from "./ElementBasicButtonLink.astro";
---

<div class="w-full h-full">
    <div
        class="flex flex-col items-center text-center px-6 py-8 md:px-8 md:py-10 bg-white rounded-2xl shadow-sm hover:shadow-lg transition h-[20rem] md:h-[27rem]"
    >
        <div
            class="h-24 w-40 md:h-28 md:w-48 flex items-center justify-center mb-6"
        >
            <img
                src={`/images/SectionPatrociniosInstitucionales/${logo}`}
                alt={title}
                class="h-full w-full object-contain transition-transform hover:scale-105"
            />
        </div>

        <div class="flex flex-col justify-between flex-grow w-full max-w-3xl">
            <div class="space-y-3">
                <h3
                    class="font-heading font-bold leading-6 text-md sm:text-lg lg:text-xl"
                    style={`color: ${primary_color}`}
                >
                    {title}
                </h3>
                <p
                    class="font-body text-shark-800 text-sm sm:text-md lg:text-lg"
                >
                    {body}
                </p>
            </div>
            <div class="pt-4 mt-auto">
                <ElementBasicButtonLink link={link} />
            </div>
        </div>
    </div>
</div>
