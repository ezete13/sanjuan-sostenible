---
const { title, subtitle, body, country, altc, image, alti } = Astro.props;
---

<div class="bg-shark-50 rounded-lg p-3 text-center">
    <img
        src={`/images/countries/${country}`}
        alt={altc}
        class="w-20 h-20 mx-auto mb-1 rounded-full object-cover"
    />
    <h3 class="text-xl font-heading font-bold text-aqua-950">
        {title}
    </h3>
    <p class="text-body text-md text-shark-800 font-semibold">
        {subtitle}
    </p>
</div>
