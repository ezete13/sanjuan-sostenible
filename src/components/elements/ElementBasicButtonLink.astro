---
const { link } = Astro.props;
---

<a
    href={link}
    class="text-xs sm:text-sm inline-flex items-center gap-1 text-shark-800 border border-shark-800 rounded-full px-2 py-0.5 hover:bg-nature-950 hover:text-shark-50 transition-colors cursor-pointer"
>
    Visitar Web
    <svg
        xmlns="http://www.w3.org/2000/svg"
        class="w-3.5 h-3.5"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
    >
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"
        ></path>
    </svg>
</a>
